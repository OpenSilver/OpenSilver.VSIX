{
  "$schema": "http://json.schemastore.org/template",
  "author": "Userware",
  "classifications": [ "Web", "Desktop", "OpenSilver", "Xaml", "C#" ],
  "identity": "OpensilverClassLibraryCS",
  "groupIdentity": "OpenSilverClassLibrary",
  "name": "OpenSilver Class Library",
  "shortName": "opensilverlib",
  "sourceName": "OpenSilverClassLibrary",
  "description": "Template for creating a C# OpenSilver Class Library.",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "constraints": {
    "sdk-only": {
      "type": "host",
      "args": [
        {
          "hostname": "dotnetcli",
          "version": "[7.0,)"
        }
      ]
    }
  },
  "symbols": {
    "skipRestore": {
      "type": "parameter",
      "datatype": "bool",
      "description": "If specified, skips the automatic restore of the project on create.",
      "defaultValue": "false"
    },
    "openSilverPackageVersion": {
      "type": "generated",
      "generator": "constant",
      "replaces": "OpenSilverPackageVersion",
      "parameters": {
        "value": "3.0.1"
      }
    }
  },
  "primaryOutputs": [
    { "path": "./OpenSilverClassLibrary.csproj" }
  ],
  "postActions": [
    {
      "condition": "(!skipRestore)",
      "description": "Restore NuGet packages required by this project.",
      "manualInstructions": [
        {
          "text": "Run 'dotnet restore'"
        }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    }
  ]
}